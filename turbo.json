{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "apps/docs/.vitepress/dist/**"]
		},
		"build:dev": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "apps/docs/.vitepress/**"]
		},
		"lint:format": {},
		"lint:size": {},
		"lint:publint": {},
		"lint:eslint": {
			"cache": false
		},
		"knip": {
			"cache": true
		},
		"lint:type-check": {}
	}
}
